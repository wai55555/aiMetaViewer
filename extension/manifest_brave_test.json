{
    "manifest_version": 3,
    "name": "AI Meta Viewer - Brave Test",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "brave_diagnostic.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "brave_diagnostic.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}